TELEGRAM_BOT_TOKEN=

# Optional
BOT_CONFIG_PATH=
AGENT=codex

# Command template for codex-cli.
# Use {prompt} placeholder if you need it in the middle.
# Examples:
# CODEX_TEMPLATE=codex exec --json {prompt}
# CODEX_TEMPLATE=codex exec --json --model gpt-5.2 {prompt}
CODEX_TEMPLATE=

# Alternative: build from CMD + ARGS when CODEX_TEMPLATE is empty.
CODEX_CMD=codex
CODEX_ARGS=--json --skip-git-repo-check

# Parakeet (audio transcription)
PARAKEET_CMD=parakeet-mlx
PARAKEET_MODEL=
PARAKEET_TIMEOUT_MS=120000

# Images (input/output)
# Default: <system temp>/aipal/images
IMAGE_DIR=
# Set to 0 to disable cleanup.
IMAGE_TTL_HOURS=24
IMAGE_CLEANUP_INTERVAL_MS=3600000
